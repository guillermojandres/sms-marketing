         <div class="row">
           {% for data in restaurante %}
                 <div class="form-column col-md-6">
                     <div class="form-group required">
                      <input type="hidden" name="idRestaurante" id="idRestaurante" value="{{data.id}}">
                         <label class="control-label">Nombre negocio</label>
                         <input type="text" class="form-control requeridoE" id="nombreR" value="{{data.nombre}}" 
                                placeholder="Nombre del restaurante" name="txtcontacto"  required>
                     </div>
                     </div>
                     <div class="form-column col-md-6">
                            <div class="form-group required">
                 <label class="control-label ">Direccion</label>
                    <input type="text" class="form-control requeridoE" id="direccionR" value="{{data.direccion}}" 
                           placeholder="Direccion" name="direccionR"  required>
                </div>
                     </div>
                    
                     
                     <div class="clearfix"></div>

                 <div class="col-md-4">
                     <div class="form-group required">
                    <label  class="control-label">Telefono</label>
                    <input type="text" class="form-control telefono requeridoE" id="telefonoR" value="{{data.telefono}}" 
                           placeholder="Numero" name="txtrelacion" required>
                </div>
                 </div>
                 <div class="col-md-4">
                       <div class="form-group required">
                        <label  class="control-label">Numero Telefono Twillio</label>
                        <input type="text" class="form-control telefono requeridoE" id="numeroTwillioRR" 
                               placeholder="Numero asignado en Twillio" name="txtrelacion" required value="{{data.numeroTwillio}}">
                         </div>
                    </div>
                   <div class="col-md-4">
                    <div class="form-group">
                    <label class="control-label ">Correo Electronico</label>
                    <input type="text" class="form-control correo" id="correoR" 
                           placeholder="example@yourdomian.com" name="correoR" value="{{data.correo}}">
                    <span class="msg error" >Direccion de correo elctronico invalido</span>

                    </div>
                 </div>  
                  
                 <div class="clearfix"></div>
                    <div class="col-md-6">
                       <div class="form-group">
                           <label  class="control-label ">Nombre contacto</label>
                           <input type="text" class="form-control" id="contactoR" 
                                  placeholder="Contacto directo con el negocio" name="referidoPor" value="{{data.nombreContacto}}">
                       </div>
                   </div>
      
                  <div class="clearfix"></div>
                  <div class="col-md-4">
                      <div class="form-group" style="margin-right: 2%;">
                          
                              <a class="btn btn-default  btn-sm "  id="cancelarEdicionRestaurante">Cancelar</a>
                        
                          
                              <button class="btn btn-primary  btn-sm " id="editarRestaurante">Guardar</button>
                          
                      </div>
                  </div>
         </div>
          {% endfor %}
