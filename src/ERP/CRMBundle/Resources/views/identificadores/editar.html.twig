                 <label class="control-label ">Serie</label>
                    <input type="text" class="form-control requeridoE" id="serieE" 
                           placeholder="Serie" name="serie"  value="{{data.serie}}"required>
                </div>
              </div>
                    
                     
                     <div class="clearfix"></div>

                 <div class="col-md-6">
                     <div class="form-group required">
                    <label  class="control-label">Incentivo</label>
                         <textarea class="form-control requeridoE" id="incentivoE" required maxlength="300" minlength="100">{{data.incentivo}}</textarea>
                     </div>
                 </div>
              <div class="clearfix"></div>
                  <div class="col-md-4">
                      <div class="form-group" style="margin-right: 2%;">
                          
                              <a class="btn btn-default  btn-sm "  id="cancelarEdicionIdentificador">Cancelar</a>
                        
                          
